# Claude / GPT API
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-claude-api-key

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# DB
RAILWAY_DB_URL=your-railway-db-url

# Environment
LOGIN_REQUIRED=true
SAVE_CRAWL_RESULTS=true
CRAWL_LOG_DIR=crawl_logs

# Environment Settings
ENV=production
PORT=8000

# Crawler Settings
CRAWLER_API_KEY=your-crawler-api-key

# Stripe API (결제용)
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLIC_KEY=your-stripe-public-key

# Frontend Settings (Next.js Public Variables)
# These variables will be exposed to the browser
NEXT_PUBLIC_BACKEND_URL=https://your-railway-api-url
NEXT_PUBLIC_APP_URL=https://your-vercel-frontend-url
NEXT_PUBLIC_STRIPE_PUBLIC_KEY=your-stripe-public-key
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id
